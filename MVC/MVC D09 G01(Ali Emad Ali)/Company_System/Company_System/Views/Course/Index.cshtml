@model List<Course>
@{
    ViewData["Title"] = "Courses";
    var studentId = ViewBag.StudentId;
}
<h2>Courses</h2>

<a asp-action="Add" class="btn btn-success mb-3">+ New Course</a>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Degree</th>
            <th>Min Degree</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Name</td>
                <td>@c.Degree</td>
                <td>@c.MinDegree</td>
                <td>@c.Department?.Name</td>
                <td>
                    <a asp-action="ShowDegree" asp-controller="Course" asp-route-studentId="@studentId" asp-route-courseId="@c.Id" class="btn btn-info btn-sm">Show Degree</a>
                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
