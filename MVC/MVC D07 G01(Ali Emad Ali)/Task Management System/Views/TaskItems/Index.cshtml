@using System.Collections.Generic
@model IEnumerable<TaskManagement.Core.Models.TaskItem>

@{
    ViewData["Title"] = "Index";
}

<h1>HomePage</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-bordered table-hover mt-3">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCompleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsCompleted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning m-2">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info m-2">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger m-2">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
