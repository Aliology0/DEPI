@model Student

@{
    ViewData["Title"] = "Confirm Delete Student";
}

<h2 class="text-danger">Confirm Delete</h2>

<div class="alert alert-warning">
    <p>Are you sure you want to delete this student?</p>
    <ul>
        <li><strong>ID:</strong> @Model.Id</li>
        <li><strong>Name:</strong> @Model.Name</li>
        <li><strong>Age:</strong> @Model.Age</li>
        <li><strong>Department:</strong> @Model.Department?.Name</li>
    </ul>
</div>

<form asp-action="ConfirmDelete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="ShowDetails" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
</form>
